<%if current_user?(@user)%>
    <%picture = @user.picture.url %>
    <%name = "You" %>
<%else%>
    <%picture = @user.picture.url %>
    <%name = @user.name %>
<%end %>    

<div class="p-2">
    <%if @user.picture? %>
        <%= image_tag(@user.picture.url,  size:"50x50",class: "rounded-pill") %>
    <% else %>
        <%= image_tag("user.png",  size:"50x50",class: "rounded-pill") %>
    <% end %>
</div>

<div class="p-2">
    <h5><%= link_to name, user_path(@user) %></h5> followed <%= link_to post.action.followed.name, post.action.followed, class: "badge badge-info"  %>
    <p><small><%= time_ago_in_words(post.created_at) %> ago</small></p> 
</div>

<div class="ml-auto p-2">
    <%= render partial: "activities/voting", locals: {post: post}%>
</div>  
