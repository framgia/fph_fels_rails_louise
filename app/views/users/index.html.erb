<% provide(:title, 'Users') %>
<br>
<div class="row">
    <%if @users.any? %>
        <% @users.each do |user| %>
            
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="p-2">
                                <%if user.picture? %>
                                    <%= image_tag(user.picture.url,  size:"100x100",class: "rounded-pill") %>
                                <% else %>
                                    <%= image_tag("user.png",  size:"100x100",class: "rounded-pill") %>
                                <% end %>
                            </div>

                            <div class="p-2"><h5 class="card-title"><%= link_to user.name, user_path(user) %></h5></div>
                            <div class="ml-auto p-2">
                                <% @user = user %>
                                <%= render 'follow_form' if logged_in?%>  
                            </div>
                        </div>
                    </div>
                </div>
                <br><br>
            </div>
        <%end%>
    <%else%>
      <h5><center>No existing users yet</center></h5>
    <%end%>
    <div class="mx-auto" style="width: 300px;">
        <%= will_paginate %>
    </div>
</div>

