
<br><br>
<div class="col-lg-12 mx-auto">
    <div class="card card-signin col-lg-12 mx-auto">
        <br><br>
        <div class = "row">
            <div class = "col">
            <h3 class="card-title text-left">Category | <%= @category.title %></h3>      
            </div>

            <div class="d-flex flex-row-reverse">
                <div class="p-2"><%= link_to "Back", admin_categories_path, class: "btn btn-info btn-md" %></div>
                <div class="p-2"><%= link_to "Add word", new_admin_category_word_path(@category), class: "btn btn-secondary btn-md" %></div>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Words</th>
                    <th scope="col">Answer</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            <%if @words.any? %>
            <%= render @words %>
            <% else %>
                <tr>
                   <td></td>
                   <td>No words in this category yet</td> 
                   <td></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <div class="mx-auto" style="width: 300px;">
            <%= will_paginate @words%>
        <div class="mx-auto" style="width: 300px;">
    <div class="card card-signin flex-row my-5">
</div>