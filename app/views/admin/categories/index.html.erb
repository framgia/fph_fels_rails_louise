<% provide(:title, 'Category List') %>
<br><br>
<div class="col-lg-12 mx-auto">
<div class="card card-signin col-lg-12 mx-auto">
<br><br>
<div class = "row">
    <div class = "col">
        <h3>Categories</h3>
    </div>

    <div class = "col">
        <%= link_to "Add category", new_admin_category_path, class: "btn btn-secondary btn-md" %>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr class="d-flex">
            <th class="col-3">Title</th>
            <th class="col-4">Description</th>
            <th class="col-2">No. of words</th>
            <th class="col-3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <%if @categories.exists?%>
            <% @categories.each do |category| %>
                <tr class="d-flex">
                    <td class="col-3"><%= category.title %></td>
                    <td class="col-4"><%= category.description %></td>
                    <td class="col-2"><%= category.words.count %></td>
                    <td class="col-3"><%= link_to "Show words", admin_category_words_path(category), class: "btn btn-primary btn-sm" %> <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-warning btn-sm"%> <%= link_to "Delete", admin_category_path(category), method: :delete,
                    data: { confirm: "You sure?" },  class: "btn btn-danger btn-sm" %> </td>
                </tr>
            <% end %>
        <%else%>
            <tr>No categories yet</tr>
        <%end%>
    </tbody>
</table>
<div class="mx-auto" style="width: 300px;">
    <%= will_paginate %>
</div>
<div class="card card-signin flex-row my-5">
</div>