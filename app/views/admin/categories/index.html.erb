<% provide(:title, 'Category List') %>
<br><br>
<div class="col-lg-12 mx-auto">
<div class="card card-signin col-lg-12 mx-auto">
<br><br>
<div class = "row">
    <div class = "col">
        <h3>Categories</h3>
    </div>

    <div class = "col">
        <%= link_to "Add category", new_admin_category_path, class: "btn btn-secondary btn-md" %>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.title %></td>
                <td><%= category.description %></td>
                <td><%= link_to "Add word", "#", class: "btn btn-primary btn-sm" %> <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-warning btn-sm"%> <%= link_to "Delete", admin_category_path(category), method: :delete,
                data: { confirm: "You sure?" } %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
 <%= will_paginate %>
<div class="card card-signin flex-row my-5">
</div>